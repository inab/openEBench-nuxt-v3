{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "allowJs": true,
    "checkJs": false,
    "jsx": "preserve",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "typeRoots": ["./types", "./node_modules/@types"],
    "paths": {
      "@/*": ["./*"],
      "#app": ["./.nuxt/types/app"]
    },
    "outDir": "./dist",
    "rootDir": "./"
  },
  "include": [
    "nuxt.config.ts",
    "app.vue",
    "components/**/*.vue",
    "layouts/**/*.vue",
    "pages/**/*.vue",
    "composables/**/*.ts",
    "plugins/**/*.ts",
    "middleware/**/*.ts",
    "api/**/*.ts",
    "config/**/*.ts",
    "constants/**/*.ts",
    "moks/**/*.ts",
    "models/**/*.ts",
    "public/**/*.ts",
    "server/**/*.ts",
    "static/**/*.ts",
    "stores/**/*.ts",
    "utils/**/*.ts",
    "test/**/*.ts",
    "types/**/*.d.ts",
    "shims-vue.d.ts"
  ],
  "exclude": ["node_modules", ".nuxt", ".output", "dist", "stories"]
}
